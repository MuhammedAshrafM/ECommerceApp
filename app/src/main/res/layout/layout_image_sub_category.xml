<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/whiteColor"
    android:orientation="vertical">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/sub_category_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/sub_category_offer_tv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="@drawable/background_style2"
        android:textColor="@color/whiteColor"
        android:textStyle="bold"
        android:textSize="15dp"
        android:minLines="1"
        android:maxLines="3"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="@id/sub_category_image"
        app:layout_constraintEnd_toEndOf="@id/sub_category_image"
        app:layout_constraintLeft_toLeftOf="@id/sub_category_image"/>

    <TextView
        android:id="@+id/sub_category_name_tv"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/transparentColor"
        android:textColor="@color/whiteColor"
        android:textStyle="bold"
        android:textSize="15dp"
        android:minLines="1"
        android:maxLines="3"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/sub_category_image"
        app:layout_constraintStart_toStartOf="@id/sub_category_image"
        app:layout_constraintLeft_toLeftOf="@id/sub_category_image"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>