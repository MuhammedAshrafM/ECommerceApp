<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="2dp"
    android:layout_margin="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="@color/whiteColor"
        android:orientation="vertical">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">
            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/background_style"
                android:src="@drawable/background_style" />


            <TextView
                android:id="@+id/product_offer"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/redColor3"
                android:textColor="@color/whiteColor"
                android:textStyle="bold"
                android:textSize="10dp"
                android:minLines="1"
                android:maxLines="2"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:visibility="visible"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/product_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/constraintLayout"
            android:gravity="start|top"
            android:textColor="@color/blackColor"
            android:maxLines="2"
            android:lines="2"
            android:textSize="15dp"
            android:textStyle="normal"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/product_title"
            android:gravity="start|center"
            android:layout_gravity="center"
            android:padding="5dp"
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/blackColor"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/product_price_without_offer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_price"
            android:gravity="start|center"
            android:lines="1"
            android:maxLines="1"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:textColor="@color/com_facebook_likeview_text_color"
            android:textSize="12dp"
            android:textStyle="normal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/product_price_without_offer"
        android:layout_marginTop="5dp">

        <ToggleButton
            android:id="@+id/saveInCart_bt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:elevation="2dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentStart="true"
            android:textOff=""
            android:textOn=""
            android:background="@mipmap/ic_launcher_add_cart"
            android:layout_alignParentLeft="true" />

        <ToggleButton
            android:id="@+id/saveInWishList_bt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:elevation="2dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:textOff=""
            android:textOn=""
            android:layout_alignParentEnd="true"
            android:layout_gravity="end|center"
            android:background="@mipmap/ic_wish"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>