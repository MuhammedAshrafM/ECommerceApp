<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/container_item_product"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@color/whiteColor"
        android:baselineAligned="false"
        android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="top|start"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:contentDescription="item product image"
            android:scaleType="fitCenter" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_image"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/product_offer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:gravity="start"
            android:background="@color/redColor3"
            android:textColor="@color/whiteColor"
            android:textStyle="bold"
            android:textSize="10sp"
            android:minLines="1"
            android:maxLines="2"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:visibility="visible"
            android:layout_weight="1"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|top"
                android:textColor="@color/blackColor"
                android:maxLines="2"
                android:lines="2"
                android:textSize="15sp"
                android:textStyle="normal"
                android:padding="5dp"/>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_title">
                <RatingBar
                    android:id="@+id/product_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="5dp"
                    android:numStars="5"
                    android:theme="@style/CustomRatingBar"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:id="@+id/product_rate_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="start|center"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/com_facebook_likeview_text_color"
                    android:textSize="10sp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLayout">
            <TextView
                android:id="@+id/product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="0.5"
                android:gravity="start|center"
                android:layout_gravity="center"
                android:padding="5dp"
                android:lines="1"
                android:maxLines="1"
                android:textColor="@color/blackColor"
                android:textSize="15sp"
                android:textStyle="bold" />

                <TextView
                    android:id="@+id/product_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:gravity="end|center"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/redColor2"
                    android:textSize="10sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <TextView
                android:id="@+id/product_price_without_offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLayout2"
                android:fontFamily="sans-serif"
                android:gravity="start|center"
                android:lines="1"
                android:maxLines="1"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:textColor="@color/com_facebook_likeview_text_color"
                android:textSize="12sp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_below="@id/product_price_without_offer">


                <Button
                    android:id="@+id/addToCart_bt"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:elevation="2dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:layout_gravity="start|center"
                    android:gravity="center"
                    android:minLines="1"
                    android:maxLines="2"
                    android:text="@string/addCart"
                    android:textSize="10sp"
                    android:textColor="@color/whiteColor"
                    android:textAllCaps="true"
                    android:background="@color/greenColor"/>

                <ToggleButton
                    android:id="@+id/saveInCart_bt"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:elevation="2dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:textOff=""
                    android:textOn=""
                    android:background="@mipmap/ic_launcher_add_cart"/>

                <ToggleButton
                    android:id="@+id/saveInWishList_bt"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:elevation="2dp"
                    android:layout_margin="5dp"
                    android:textOff=""
                    android:textOn=""
                    android:layout_gravity="end|center"
                    android:background="@mipmap/ic_wish"/>
            </LinearLayout>
        </RelativeLayout>




    </LinearLayout>
</androidx.cardview.widget.CardView>